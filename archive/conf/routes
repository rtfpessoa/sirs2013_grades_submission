# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                controllers.Application.index
POST        /grades                          controllers.Application.grades

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)

# Storage
POST        /storage/receive                 controllers.storage.StorageController.receive
GET         /storage/:course/:teacher        controllers.storage.StorageController.index(course:Int, teacher:String)
